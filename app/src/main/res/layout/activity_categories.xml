<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guanzhuli.foody.HomePage.Categories">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/zero"
            android:layout_margin="5dp"
            android:src="@drawable/frankie_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />

        <ImageButton
            android:id="@+id/one"
            android:layout_margin="5dp"
            android:src="@drawable/pizza_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/two"
            android:layout_margin="5dp"
            android:src="@drawable/sandy_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/three"
            android:layout_margin="5dp"
            android:src="@drawable/starter_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/four"
            android:layout_margin="5dp"
            android:src="@drawable/indian_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/five"
            android:layout_margin="5dp"
            android:src="@drawable/chinese_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/six"
            android:layout_margin="5dp"
            android:src="@drawable/punjabi_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />
        <ImageButton
            android:id="@+id/seven"
            android:layout_margin="5dp"
            android:src="@drawable/biryani_wally"
            android:layout_width="wrap_content"
            android:layout_height="175dp" />

    </LinearLayout>

</ScrollView>
